<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>pl.lodz.p.it.ssbd2021.ssbd02</groupId>
    <artifactId>ssbd02</artifactId>
    <version>0.0.1</version>
    <packaging>war</packaging>

    <name>ssbd02</name>

    <developers>
        <developer>
            <name>Artur Madaj</name>
            <id>224363</id>
        </developer>
        <developer>
            <name>Daniel Łondka</name>
            <id>224360</id>
        </developer>
        <developer>
            <name>Patryk Kolanek</name>
            <id>224333</id>
        </developer>
        <developer>
            <name>Julia Kołodziej</name>
            <id>224334</id>
        </developer>
        <developer>
            <name>Karolina Kowalczyk</name>
            <id>224340</id>
        </developer>
        <developer>
            <name>Wojciech Sowa</name>
            <id>224429</id>
        </developer>
        <developer>
            <name>Kacper Świercz</name>
            <id>224443</id>
        </developer>
    </developers>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>8.0.1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warSourceDirectory>../spa/dist/spa</warSourceDirectory>
                </configuration>
                <version>3.3.0</version>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>Build spa</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>bat</executable>
                    <workingDirectory>../scripts/run.bat</workingDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
